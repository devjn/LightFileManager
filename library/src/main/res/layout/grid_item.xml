<com.github.devjn.filemanager.utils.ForegroundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_small"
    android:background="@drawable/statelist_focusable_item_background"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/spacing_small">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_file" />

        <TextView
            android:id="@+id/size"
            style="@style/TextAppearance.AppTheme.Caption.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:text="0" />
    </FrameLayout>

    <com.github.devjn.filemanager.utils.AutoResizeTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxHeight="56dp"
        tools:text="Name" />
</com.github.devjn.filemanager.utils.ForegroundLinearLayout>